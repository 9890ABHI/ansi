# slurm.conf file generated by Ansible
ClusterName=hpc_cluster
SlurmctldHost={{ groups['master'][0] }}
MpiDefault=none
ProctrackType=proctrack/linuxproc
ReturnToService=1
SlurmdPort=6818
SlurmdSpoolDir=/var/spool/slurmd
SlurmUser=slurm
SlurmdPidFile=/var/run/slurmd.pid
StateSaveLocation=/var/spool/slurmctld
SwitchType=switch/none
TaskPlugin=task/affinity

# Nodes
NodeName=compute[1-{{ groups['compute']|length }}] State=UNKNOWN

# Partition
PartitionName=debug Nodes=compute[1-{{ groups['compute']|length }}] Default=YES MaxTime=INFINITE State=UP
